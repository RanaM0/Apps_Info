<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.SettingsFrag">


    <TextView
        android:id="@+id/txtSettingstitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:text="Settings"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txtVersiontitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:text="Version"
        android:textColor="@color/black"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtSettingstitle" />

    <TextView
        android:id="@+id/txtVersionNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:text="1.6"
        android:textColor="@color/black"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtSettingstitle" />

    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:background="@drawable/bg_settings"
        app:layout_constraintTop_toBottomOf="@id/txtVersiontitle" />


    <TextView
        android:id="@+id/txtSharebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/transparent"
        android:gravity="start"
        android:padding="@dimen/_10sdp"
        android:text="Share App"
        android:textColor="@color/black"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintTop_toBottomOf="@id/v1" />

    <View
        android:id="@+id/v2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:background="@drawable/bg_settings"
        app:layout_constraintTop_toBottomOf="@id/txtSharebtn" />

    <TextView
        android:id="@+id/txtRateUsbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/transparent"
        android:gravity="start"
        android:padding="@dimen/_10sdp"
        android:text="Rate Us"
        android:textColor="@color/black"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintTop_toBottomOf="@id/v2" />

    <View
        android:id="@+id/v3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:background="@drawable/bg_settings"
        app:layout_constraintTop_toBottomOf="@id/txtRateUsbtn" />

    <TextView
        android:id="@+id/txtPrivacyPolicybtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/transparent"
        android:gravity="start"
        android:padding="@dimen/_10sdp"
        android:text="Privacy Policy"
        android:textColor="@color/black"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintTop_toBottomOf="@id/v3" />

    <View
        android:id="@+id/v4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:background="@drawable/bg_settings"
        app:layout_constraintTop_toBottomOf="@id/txtPrivacyPolicybtn" />

    <TextView
        android:id="@+id/txtLisencebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/transparent"
        android:gravity="start"
        android:padding="@dimen/_10sdp"
        android:text="Lisence"
        android:textColor="@color/black"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintTop_toBottomOf="@id/v4" />


</androidx.constraintlayout.widget.ConstraintLayout>