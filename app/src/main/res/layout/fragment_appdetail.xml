<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/silver"
    tools:context=".Fragments.AppdetailFrags.Appdetail">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="0.1"
                    android:background="@drawable/bg_appdetail_icons"
                    android:padding="@dimen/_7sdp">

                    <ImageView
                        android:id="@+id/ivDetailIcon"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/ic_launcher" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1.9"
                    android:background="@drawable/bg_app_detail_content"
                    android:padding="@dimen/_7sdp"
                    android:paddingStart="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/txtAppnameTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="App Name"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtAppname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtAppnameTitle"
                        android:singleLine="true"
                        android:text="@string/app_name"
                        android:textSize="@dimen/_11ssp" />


                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="0.1"
                    android:background="@drawable/bg_appdetail_icons"
                    android:padding="@dimen/_7sdp">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_app_version"
                        app:tint="@color/light_gray" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1.9"
                    android:background="@drawable/bg_app_detail_content"
                    android:padding="@dimen/_5sdp"
                    android:paddingStart="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/txtAppvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="App Version"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtAppVersion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtAppvTitle"
                        android:singleLine="true"
                        android:text="@string/app_name"
                        android:textSize="@dimen/_11ssp" />


                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="0.1"
                    android:background="@drawable/bg_appdetail_icons"
                    android:padding="@dimen/_7sdp">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_app_package"
                        app:tint="@color/light_gray" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1.9"
                    android:background="@drawable/bg_app_detail_content"
                    android:padding="@dimen/_5sdp"
                    android:paddingStart="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/txtApppkgtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="App Package"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtAppPkg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtApppkgtitle"
                        android:singleLine="true"
                        android:text="@string/app_name"
                        android:textSize="@dimen/_11ssp" />


                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="0.1"
                    android:background="@drawable/bg_appdetail_icons"
                    android:padding="@dimen/_7sdp">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_sdk_version"
                        app:tint="@color/light_gray" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1.9"
                    android:background="@drawable/bg_app_detail_content"
                    android:padding="@dimen/_5sdp"
                    android:paddingStart="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/txtsdkTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SDK Version"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtSDK"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtsdkTitle"
                        android:singleLine="true"
                        android:text="@string/app_name"
                        android:textSize="@dimen/_11ssp" />


                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="0.1"
                    android:background="@drawable/bg_appdetail_icons"
                    android:padding="@dimen/_7sdp">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_app_path"
                        app:tint="@color/light_gray" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1.9"
                    android:background="@drawable/bg_app_detail_content"
                    android:padding="@dimen/_5sdp"
                    android:paddingStart="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/txtApppathTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="App Path"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtAppPath"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtApppathTitle"
                        android:singleLine="true"
                        android:text="@string/app_name"
                        android:textSize="@dimen/_11ssp" />


                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="0.1"
                    android:background="@drawable/bg_appdetail_icons"
                    android:padding="@dimen/_7sdp">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_app_size"
                        app:tint="@color/light_gray" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1.9"
                    android:background="@drawable/bg_app_detail_content"
                    android:padding="@dimen/_5sdp"
                    android:paddingStart="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/txtAppsizeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="App Size"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtAppSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtAppsizeTitle"
                        android:maxLength="4"
                        android:singleLine="true"
                        android:text="@string/app_name"
                        android:textSize="@dimen/_11ssp" />


                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="0.1"
                    android:background="@drawable/bg_appdetail_icons"
                    android:padding="@dimen/_7sdp">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_install_date"
                        app:tint="@color/light_gray" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1.9"
                    android:background="@drawable/bg_app_detail_content"
                    android:padding="@dimen/_5sdp"
                    android:paddingStart="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/txtAppIDTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Install Date"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtAppInstallDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtAppIDTitle"
                        android:singleLine="true"
                        android:text="@string/app_name"
                        android:textSize="@dimen/_11ssp" />


                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="0.1"
                    android:background="@drawable/bg_appdetail_icons"
                    android:padding="@dimen/_7sdp">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_update_date"
                        app:tint="@color/light_gray" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1.9"
                    android:background="@drawable/bg_app_detail_content"
                    android:padding="@dimen/_5sdp"
                    android:paddingStart="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/txtAppupdateitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Update Date"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtAppUpdateDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtAppupdateitle"
                        android:singleLine="true"
                        android:text="@string/app_name"
                        android:textSize="@dimen/_11ssp" />


                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>